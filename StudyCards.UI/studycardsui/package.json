{
  "name": "studycardsui",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "npm run generate-api && ng build --configuration production",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:ci": "npm run generate-api && npm run test -- --watch=false",
    "generate-api": "npx ng-openapi-gen --services true --promises false --input servercardsapi.json --output src/app/@api",
    "start-api": "dotnet run --project ../../StudyCards.Server/StudyCards.Server.csproj --launch-profile https"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@11.6.2",
  "dependencies": {
    "@angular/cdk": "^21.0.1",
    "@angular/common": "^21.0.8",
    "@angular/compiler": "^21.0.8",
    "@angular/core": "^21.0.8",
    "@angular/forms": "^21.0.8",
    "@angular/material": "^21.0.1",
    "@angular/platform-browser": "^21.0.8",
    "@angular/router": "^21.0.8",
    "@microsoft/signalr": "^10.0.0",
    "@ngrx/signals": "^21.0.0-beta.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.5",
    "@angular/cli": "^21.0.5",
    "@angular/compiler-cli": "^21.0.8",
    "jsdom": "^27.1.0",
    "ng-openapi-gen": "^1.0.5",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  }
}